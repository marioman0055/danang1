        // --- Logic ---
        
        function init() {
            updateCountdown();
            setInterval(updateCountdown, 1000 * 60); // Update every minute
            switchView('itinerary'); // Default view
        }

        function updateCountdown() {
            const now = new Date();
            const diff = tripData.startDate - now;
            const days = Math.ceil(diff / (1000 * 60 * 60 * 24));
            const el = document.getElementById('countdown');
            if (diff > 0) {
                el.innerText = `D-${days}`;
            } else if (diff > - (6 * 24 * 60 * 60 * 1000)) {
                el.innerText = "ì—¬í–‰ ì¤‘! âœˆï¸";
            } else {
                el.innerText = "ì—¬í–‰ ì¢…ë£Œ";
            }
        }

        function switchView(viewName) {
            // Update Nav State
            document.querySelectorAll('.nav-btn').forEach(btn => {
                if(btn.dataset.target === viewName) {
                    btn.classList.add('text-stone-800', 'font-bold');
                    btn.classList.remove('text-stone-400');
                } else {
                    btn.classList.remove('text-stone-800', 'font-bold');
                    btn.classList.add('text-stone-400');
                }
            });

            const container = document.getElementById('view-container');
            container.innerHTML = ''; // Clear content
            container.className = 'fade-in space-y-6';

            if (viewName === 'itinerary') renderItinerary(container);
            else if (viewName === 'budget') renderBudget(container);
            else if (viewName === 'checklist') renderChecklist(container);
            else if (viewName === 'info') renderInfo(container);
        }

        function renderItinerary(container) {
            const intro = document.createElement('div');
            intro.className = 'bg-stone-100 p-4 rounded-lg mb-4';
            intro.innerHTML = `<p class="text-sm text-stone-600">ğŸ“… <strong>5ë°• 6ì¼ ìƒì„¸ ì¼ì •</strong>ì…ë‹ˆë‹¤. ë‚ ì§œë¥¼ í´ë¦­í•˜ì—¬ ì„¸ë¶€ ê³„íšì„ í™•ì¸í•˜ì„¸ìš”. ì†Œë…€ê°ì„± ì²´í—˜ê³¼ íë§ í¬ì¸íŠ¸ê°€ í¬í•¨ë˜ì–´ ìˆìŠµë‹ˆë‹¤.</p>`;
            container.appendChild(intro);

            // Day Selectors
            const dayNav = document.createElement('div');
            dayNav.className = 'flex overflow-x-auto gap-2 pb-2 mb-4 scrollbar-hide';
            tripData.itinerary.forEach((day, index) => {
                const btn = document.createElement('button');
                btn.className = `whitespace-nowrap px-4 py-2 rounded-full text-sm font-medium transition-colors border ${index === 0 ? 'bg-teal-600 text-white border-teal-600' : 'bg-white text-stone-600 border-stone-200'}`;
                btn.innerText = `Day ${day.day}`;
                btn.onclick = () => {
                    document.querySelectorAll('#day-list > div').forEach(el => el.classList.add('hidden'));
                    document.getElementById(`day-${day.day}`).classList.remove('hidden');
                    // Reset buttons
                    Array.from(dayNav.children).forEach(b => {
                        b.className = 'whitespace-nowrap px-4 py-2 rounded-full text-sm font-medium transition-colors border bg-white text-stone-600 border-stone-200';
                    });
                    btn.className = 'whitespace-nowrap px-4 py-2 rounded-full text-sm font-medium transition-colors border bg-teal-600 text-white border-teal-600';
                };
                dayNav.appendChild(btn);
            });
            container.appendChild(dayNav);

            // Day Details
            const dayList = document.createElement('div');
            dayList.id = 'day-list';
            
            tripData.itinerary.forEach((day, index) => {
                const dayCard = document.createElement('div');
                dayCard.id = `day-${day.day}`;
                dayCard.className = index === 0 ? '' : 'hidden';
                
                let eventsHtml = day.events.map(event => `
                    <div class="flex items-start gap-3 p-3 bg-white border border-stone-100 rounded-lg shadow-sm hover:shadow-md transition-shadow">
                        <div class="text-2xl mt-1">${event.icon}</div>
                        <div>
                            <span class="inline-block px-2 py-0.5 rounded text-xs font-bold bg-orange-100 text-orange-800 mb-1">${event.time}</span>
                            <h4 class="font-bold text-stone-800">${event.text}</h4>
                            ${event.detail ? `<p class="text-xs text-stone-500 mt-1">${event.detail}</p>` : ''}
                        </div>
                    </div>
                `).join('');

                dayCard.innerHTML = `
                    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                        <div class="bg-teal-50 p-4 border-b border-teal-100">
                            <h3 class="text-lg font-bold text-teal-800">${day.date} | ${day.title}</h3>
                        </div>
                        <div class="p-4 space-y-3 bg-stone-50">
                            ${eventsHtml}
                        </div>
                    </div>
                `;
                dayList.appendChild(dayCard);
            });
            container.appendChild(dayList);
        }

        function renderBudget(container) {
            const intro = document.createElement('div');
            intro.className = 'bg-stone-100 p-4 rounded-lg mb-4';
            intro.innerHTML = `<p class="text-sm text-stone-600">ğŸ’° <strong>ì˜ˆìƒ ê²½ë¹„(VND ê¸°ì¤€)</strong>ì…ë‹ˆë‹¤. í•­ê³µê¶Œê³¼ ìˆ™ë°•ë¹„ë¥¼ ì œì™¸í•œ í˜„ì§€ ì§€ì¶œ ì˜ˆìƒ ë‚´ì—­ì…ë‹ˆë‹¤. (ì•½ 925ë§Œë™)</p>`;
            container.appendChild(intro);

            // Chart Container
            const chartWrapper = document.createElement('div');
            chartWrapper.className = 'bg-white p-4 rounded-xl shadow mb-6';
            chartWrapper.innerHTML = `<div class="chart-container"><canvas id="budgetChart"></canvas></div>`;
            container.appendChild(chartWrapper);

            // Data Table
            const table = document.createElement('div');
            table.className = 'bg-white rounded-xl shadow overflow-hidden';
            let rows = tripData.budget.map(item => `
                <div class="flex justify-between items-center p-3 border-b border-stone-100 last:border-0">
                    <div class="flex items-center gap-2">
                        <span class="w-3 h-3 rounded-full" style="background-color: ${item.color}"></span>
                        <span class="text-sm font-medium text-stone-700">${item.category}</span>
                    </div>
                    <span class="text-sm font-bold text-stone-800">${item.amount.toLocaleString()} VND</span>
                </div>
            `).join('');
            table.innerHTML = rows;
            container.appendChild(table);

            // Render Chart
            setTimeout(() => {
                const ctx = document.getElementById('budgetChart').getContext('2d');
                new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: tripData.budget.map(d => d.category.split(' ')[0]), // Simplify labels
                        datasets: [{
                            data: tripData.budget.map(d => d.amount),
                            backgroundColor: tripData.budget.map(d => d.color),
                            borderWidth: 0
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { position: 'bottom' }
                        }
                    }
                });
            }, 0);
        }

        function renderChecklist(container) {
            const intro = document.createElement('div');
            intro.className = 'bg-stone-100 p-4 rounded-lg mb-4';
            intro.innerHTML = `<p class="text-sm text-stone-600">âœ… <strong>ì—¬í–‰ ì¤€ë¹„ ì²´í¬ë¦¬ìŠ¤íŠ¸</strong>ì…ë‹ˆë‹¤. í´ë¦­í•˜ì—¬ ì™„ë£Œ ìƒíƒœë¥¼ í‘œì‹œí•˜ì„¸ìš”. ì§„í–‰ ìƒí™©ì´ ì €ì¥ë˜ì§€ ì•Šìœ¼ë¯€ë¡œ ì°¸ê³ ìš©ìœ¼ë¡œ í™œìš©í•˜ì„¸ìš”.</p>`;
            container.appendChild(intro);

            tripData.checklist.forEach(group => {
                const card = document.createElement('div');
                card.className = 'bg-white rounded-xl shadow mb-4 overflow-hidden';
                
                const header = document.createElement('div');
                header.className = 'bg-orange-50 p-3 border-b border-orange-100 font-bold text-orange-800';
                header.innerText = group.category;
                card.appendChild(header);

                const list = document.createElement('div');
                list.className = 'p-2';
                group.items.forEach(item => {
                    const row = document.createElement('label');
                    row.className = 'flex items-center gap-3 p-3 hover:bg-stone-50 rounded cursor-pointer';
                    row.innerHTML = `
                        <input type="checkbox" class="w-5 h-5 text-teal-600 rounded focus:ring-teal-500 border-gray-300" onchange="this.nextElementSibling.classList.toggle('line-through'); this.nextElementSibling.classList.toggle('text-stone-400')">
                        <span class="text-sm text-stone-700 select-none">${item}</span>
                    `;
                    list.appendChild(row);
                });
                card.appendChild(list);
                container.appendChild(card);
            });
        }

